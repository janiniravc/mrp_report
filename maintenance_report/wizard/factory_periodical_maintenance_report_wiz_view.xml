<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_factory_periodical_maintenance_report_wiz">
			<field name="name">factory.periodical.maintenance.report.wiz.form</field>
			<field name="model">factory.periodical.maintenance.report.wiz</field>
			<field name="arch" type="xml">
			 	<form string="Factory Periodical Maintenance" version="7.0">
 					<group col="4" colspan="4">
						<field name="start_date" required="1"/>
						<field name="end_date" required="1"/>
						<field name="report_type" required="1" widget="radio"/>
					</group>
					<group col="4" colspan="4">
						<separator string="Factory"/><br/>
						<field name="factory_ids" colspan="4" nolabel="1" required="1"/>
					</group>
					<footer>
                        <button name="print_report" string="Print" icon="gtk-print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_factory_periodical_maintenance_report_wiz">
			<field name="name">Factory Periodical Maintenance</field>
			<field name="res_model">factory.periodical.maintenance.report.wiz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Factory Periodical Maintenance" 
				  parent="menu_report_maintenance" 
				  id="menu_factory_periodical_maintenance_report" 
				  action="action_factory_periodical_maintenance_report_wiz"/>
	</data>
</openerp>
