<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_maintenance_material_list_report_wiz">
			<field name="name">maintenance_material_list_report_wiz</field>
			<field name="model">maintenance.material.list.report.wiz</field>
			<field name="arch" type="xml">
			 	<form string="Maintenance Material List" version="7.0">
					<group col="4" colspan="4">
						<field name="start_date"/>
						<field name="end_date"/>
					</group>
					<group col="4" colspan="4">
						<separator string="Factory"/><br/>
						<field name="factory_ids" colspan="4" nolabel="1" widget="many2many_tags" 
						          on_change="onchange_factory_ids(factory_ids)"/>
					</group>
					<group col="4" colspan="4">
						<separator string="Machine"/><br/>
						<field name="machine_ids" colspan="4" nolabel="1"/>
					</group>
					
					<footer>
                        <button name="print_report" string="Print" icon="gtk-print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_maintenance_material_list_report_wiz">
			<field name="name">Maintenance Material List</field>
			<field name="res_model">maintenance.material.list.report.wiz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Maintenance Material List" 
				  parent="menu_report_maintenance" 
				  id="menu_maintenance_material_list_report" 
				  action="action_maintenance_material_list_report_wiz"/>
	</data>
</openerp>
