<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_monthly_maintenance_report_wiz">
			<field name="name">monthly_maintenance_report_wiz</field>
			<field name="model">monthly.maintenance.report.wiz</field>
			<field name="arch" type="xml">
			 	<form string="Monthly Maintenance Report" version="7.0">
                    <group col="4" colspan="4">
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                        <field name="factory_id"/>
                    </group>
					<footer>
                        <button name="print_report" string="Print" icon="gtk-print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_monthly_maintenance_report_wiz">
			<field name="name">Monthly Material Report</field>
			<field name="res_model">monthly.maintenance.report.wiz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Monthly Maintenance Report" 
				  parent="menu_report_maintenance" 
				  id="menu_monthly_maintenance_report_wiz" 
				  action="action_monthly_maintenance_report_wiz"/>
	</data>
</openerp>
