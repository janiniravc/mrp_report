<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_machine_log_report_wiz">
			<field name="name">machine.log.report.wiz.form</field>
			<field name="model">machine.log.report.wiz</field>
			<field name="arch" type="xml">
			 	<form string="Machine Log" version="7.0">
					<group col="4" colspan="4">
						<field name="machine_id" required="True"/>
						<label string=""/>
					</group>
					<footer>
                        <button name="print_report" string="Print" icon="gtk-print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_machine_log_report_wiz">
			<field name="name">Machine Log</field>
			<field name="res_model">machine.log.report.wiz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Machine Log" 
				  parent="menu_report_maintenance" 
				  id="menu_machine_log_report_wiz" 
				  action="action_machine_log_report_wiz"/>
	</data>
</openerp>
