<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_maintenance_daily_weekly_report_wiz">
			<field name="name">maintenance.daily.weekly.report.wiz.form</field>
			<field name="model">maintenance.daily.weekly.report.wiz</field>
			<field name="arch" type="xml">
			 	<form string="Factory Periodical Maintenance" version="7.0">
 					<group col="4" colspan="4">
	 					<group>
	 						<field name="daily_weekly_selection" required="1"/>
							<field name="start_date" required="1" on_change="onchange_start_date(start_date)"/>
							<field name="end_date" required="1" attrs="{'invisible':[('daily_weekly_selection','=','daily')]}"/>
						</group>
						<group>
							<field name="factory_id" on_change="onchange_factory_id(factory_id)" required="1"/>
							<field name="line_id" required="1"/>
						</group>
					</group>
					<footer>
                        <button name="print_report" string="Print" icon="gtk-print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_maintenance_daily_weekly_report_wiz">
			<field name="name">Maintenance Daily/Weekly Report</field>
			<field name="res_model">maintenance.daily.weekly.report.wiz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Maintenance Daily/Weekly Report" 
				  parent="menu_report_maintenance" 
				  id="menu_maintenance_daily_weekly_report" 
				  action="action_maintenance_daily_weekly_report_wiz"/>
	</data>
</openerp>
