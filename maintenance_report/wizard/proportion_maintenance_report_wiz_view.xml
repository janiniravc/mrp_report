<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_proportion_maintenance_report_wiz">
			<field name="name">proportion.maintenance.report.wiz.form</field>
			<field name="model">proportion.maintenance.report.wiz</field>
			<field name="arch" type="xml">
			 	<form string="Proportion Maintenance" version="7.0">
				    <group col="4" colspan="4">
						<field name="start_date" required="1"/>
						<field name="end_date" required="1"/>
					</group>
					<footer>
                        <button name="print_report" string="Print" icon="gtk-print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_proportion_maintenance_report">
			<field name="name">Proportion of remedial maintenance to total maintenance</field>
			<field name="res_model">proportion.maintenance.report.wiz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Proportion of Maintenance" 
				  parent="menu_report_maintenance" 
				  id="menu_proportion_maintenance_report" 
				  action="action_proportion_maintenance_report"/>

	</data>
</openerp>