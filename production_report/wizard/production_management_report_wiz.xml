<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_production_management_report_wiz">
			<field name="name">production.management.report.wiz</field>
			<field name="model">production.management.report.wiz</field>
			<field name="arch" type="xml">
			 	<form string="Produced Units Level Report" version="7.0">
                    <group col="4" colspan="4">
                    	<group>
	                        <field name="report_selection" required="1"/>
	                        <field name="start_date" required="1"/>
	                        <field name="end_date" required="1"/>
                        </group>
                        <group>
                        	<separator string=""/>
                        	<label string=""/>
	                        <field name="product_id" required="1"/>
	                        <field name="factory_id" required="1"/>
                        </group>
                    </group>
					<footer>
                        <button name="print_report" string="Print" icon="gtk-print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_production_management_report_wiz">
			<field name="name">Production Management Report</field>
			<field name="res_model">production.management.report.wiz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Production Management Report" 
				  parent="menu_production_report" 
				  id="menu_production_management_report_wiz" 
				  action="action_production_management_report_wiz"/>
	</data>
</openerp>
