<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_auxiliary_materials_product_report_wiz">
			<field name="name">auxiliary.materials.product.report.wiz</field>
			<field name="model">auxiliary.materials.product.report.wiz</field>
			<field name="arch" type="xml">
			 	<form string="Auxiliary Materials Product per Station report" version="7.0">
                    <group col="4" colspan="4">
                    	<field name="start_date" required="1"/>
                    	<field name="end_date" required="1"/>
                        <field name="product_id" required="1"/>
                        <label string=""/>
                    </group>
                    <group col="4" colspan="4">
                        <field name="station_ids" required="1"/>
                    </group>
					<footer>
                        <button name="print_report" string="Print" icon="gtk-print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_auxiliary_materials_product_report_wiz">
			<field name="name">Auxiliary Materials Product report</field>
			<field name="res_model">auxiliary.materials.product.report.wiz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Auxiliary Materials Product report" 
				  parent="menu_production_report" 
				  id="menu_auxiliary_materials_product_report_wiz" 
				  action="action_auxiliary_materials_product_report_wiz"/>
	</data>
</openerp>
