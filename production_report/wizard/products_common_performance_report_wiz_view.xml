<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_products_common_performance_report_wiz">
			<field name="name">products.common.performance.report.wiz.form</field>
			<field name="model">products.common.performance.report.wiz</field>
			<field name="arch" type="xml">
			 	<form string="Factory Periodical Maintenance" version="7.0">
					<group col="4" colspan="4">
						<separator string="Products"/><br/>
						<field name="product_ids" domain="[('bom_ids','!=',False)]" colspan="4" nolabel="1" required="1"/>
					</group>
					<footer>
                        <button name="print_report" string="Print" icon="gtk-print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_products_common_performance_report_wiz">
			<field name="name">Products Common Performance</field>
			<field name="res_model">products.common.performance.report.wiz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Products Common Performance" 
				  parent="menu_production_report" 
				  id="menu_products_common_performance_report" 
				  action="action_products_common_performance_report_wiz"/>
	</data>
</openerp>
