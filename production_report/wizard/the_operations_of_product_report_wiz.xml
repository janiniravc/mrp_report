<?xml version="1.0" ?>
<openerp>
	<data>

		<record model="ir.ui.view" id="view_operations_of_product_report_wiz">
			<field name="name">operations.of.product.report.wiz</field>
			<field name="model">operations.of.product.report.wiz</field>
			<field name="arch" type="xml">
			 	<form string="Operation of the product Report" version="7.0">
			 	   <group col="4" colspan="4">
                        <field name="product_ids" widget="many2many_tags" colspan="4"  required="1"/>
                        <field name="workcenter_ids" colspan="4" widget="many2many_tags" required="1"/>
                   </group>
					<footer>
                        <button name="print_report" string="Print" icon="gtk-print" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_operations_of_product_report_wiz">
			<field name="name">Operations of the Product</field>
			<field name="res_model">operations.of.product.report.wiz</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Operations of the Product" 
				  parent="menu_production_report" 
				  id="menu_operations_of_product_report_wiz" 
				  action="action_operations_of_product_report_wiz"/>
	</data>
</openerp>
